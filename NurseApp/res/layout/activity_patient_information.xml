<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nurseapp.PatientInformation" >

    <TextView
        android:id="@+id/display_Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/display_Info" />

    <Button
        android:id="@+id/buttonRecordNewVisit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonPastVisit"
        android:layout_marginTop="25dp"
        android:onClick="recordNewVisit"
        android:text="@string/buttonRecordNewVisit" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonRecordNewVisit"
        android:layout_marginTop="19dp"
        android:onClick="changeToRecordPage"
        android:text="update vitals" />

    <Button
        android:id="@+id/buttonPastVisit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonRecordNewVisit"
        android:layout_below="@+id/display_Info"
        android:layout_marginTop="90dp"
        android:onClick="viewPastVisits"
        android:text="View Record" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="26dp"
        android:onClick="addDoctorTime"
        android:text="Add Doctor Time" />

</RelativeLayout>
